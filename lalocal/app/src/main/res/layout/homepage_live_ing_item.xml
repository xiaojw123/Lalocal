<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_size_20_dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_size_3_dp"
        app:elevation="0dp"
        android:layout_marginBottom="@dimen/dimen_size_15_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/live_height_60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/title_high_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_size_8_dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_live_ing_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="加载中..."
                            android:singleLine="true"
                            android:textColor="@color/color_1a"
                            android:textSize="@dimen/text_size_16_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_size_5_dp"
                            android:background="@color/color_ffaa2a"
                            android:paddingLeft="@dimen/dimen_size_5_dp"
                            android:paddingRight="@dimen/dimen_size_5_dp"
                            android:text="直播中"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_size_12_dp"
                            android:layout_height="@dimen/dimen_size_12_dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/peopleliving_location_darkic" />

                        <TextView
                            android:id="@+id/tv_live_ing_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_size_4_dp"
                            android:text="加载中..."
                            android:textColor="@color/color_b3"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_live_ing"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/androidloading" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精彩回放"
        android:textSize="@dimen/text_size_12_sp"
        android:textColor="@color/color_1a"
        android:layout_marginBottom="@dimen/dimen_size_5_dp"/>
</LinearLayout>