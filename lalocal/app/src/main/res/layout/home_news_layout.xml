<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white">

    <com.lalocal.lalocal.view.CustomTitleView
        android:id="@+id/home_live_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="@string/liveplay" />

    <TextView
        android:id="@+id/live_create_room"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/live_height_44dp"
        android:layout_marginTop="@dimen/dimen_size_10_dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_size_13_dp"
        android:drawableTop="@drawable/letsmakelive_ic"
        android:drawablePadding="@dimen/dimen_size_3_dp"
        android:text="@string/start_live"
        android:paddingLeft="@dimen/dimen_size_2_dp"
        android:paddingRight="@dimen/dimen_size_2_dp"
        android:textColor="@color/color_66"
        android:textSize="@dimen/text_size_10_sp" />
    <!--搜索-->
    <FrameLayout
        android:id="@+id/live_search_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_30_dp"
        android:layout_below="@+id/home_live_ctv"
        android:layout_marginBottom="@dimen/dimen_size_10_dp"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginRight="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_10_dp"
        android:background="@drawable/search_view_bg">

        <TextView
            android:id="@+id/live_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textColor="@color/color_b3"
            android:textSize="@dimen/text_size_15_sp" />
            <!--android:drawableLeft="@drawable/searchbar_searchicon"-->

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/live_search_fl">

        <com.lalocal.lalocal.live.im.ui.blur.BlurImageView
            android:id="@+id/home_news_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ListView
            android:id="@+id/live_recy_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:overScrollMode="never"
            android:scrollbars="none"
            ></ListView>


        <!--<ImageView-->
            <!--android:id="@+id/live_create_room"-->
            <!--android:layout_width="@dimen/live_height_125dp"-->
            <!--android:layout_height="@dimen/live_height_125dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/takevideobtn" />-->
    </RelativeLayout>

</RelativeLayout>