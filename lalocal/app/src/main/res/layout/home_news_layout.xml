<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white">

    <com.lalocal.lalocal.live.im.ui.blur.BlurImageView
        android:id="@+id/home_news_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <!--搜索-->
    <FrameLayout
        android:id="@+id/live_search_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_30_dp"
        android:background="@drawable/search_view_bg"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginRight="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_30_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_15_sp"
            android:textColor="@color/color_b3"
            android:drawableLeft="@drawable/searchbar_searchicon"
            />

    </FrameLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <ListView
            android:id="@+id/live_recy_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:divider="@null"
            android:overScrollMode="never"
            ></ListView>


    <ImageView
        android:id="@+id/live_create_room"
        android:layout_width="@dimen/live_height_125dp"
        android:layout_height="@dimen/live_height_125dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/takevideobtn"/>
</RelativeLayout>

</LinearLayout>
</RelativeLayout>