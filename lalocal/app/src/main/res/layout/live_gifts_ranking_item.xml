<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_gift_rank_item_layout"
    android:layout_width="match_parent"
    android:layout_height="66dp"
   >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/live_gifts_ranking_head"
        android:layout_width="@dimen/live_height_36dp"
        android:layout_height="@dimen/live_height_36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/live_height_30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/androidloading"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/live_gifts_ranking_head"
        android:paddingLeft="@dimen/live_padding_10dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/live_gifts_ranking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#97d3e9"
            android:textSize="@dimen/live_text_12sp"
            android:paddingLeft="@dimen/live_padding_10dp"
            android:gravity="center"
            android:text="lalocal"/>
        <TextView
            android:id="@+id/live_gifts_ranking_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/monetary"
            android:drawablePadding="@dimen/live_padding_5dp"
            android:paddingLeft="@dimen/live_padding_10dp"
            android:paddingTop="@dimen/live_padding_5dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_15_sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/live_gifts_ranking_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/live_padding_30dp"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:text="5"
        android:textColor="@color/color_ffaa2a"
        />
</RelativeLayout>