<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginRight="@dimen/live_padding_2dp"
            android:layout_marginLeft="@dimen/live_padding_2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/live_height_105dp"
                    >
                    <ImageView
                        android:id="@+id/live_attention_dialog_bgiv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/watcher_fllow_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜欢主播,\n就点个关注吧!"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/live_padding_20dp"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/text_size_20_sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/live_height_70dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/live_attention_dialog_head"
                        android:layout_width="@dimen/live_height_30dp"
                        android:layout_height="@dimen/live_height_30dp"
                        android:layout_marginLeft="@dimen/live_padding_20dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/androidloading" />

                    <TextView
                        android:id="@+id/live_attention_dialog_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="lalocal"
                        android:layout_marginRight="@dimen/live_padding_20dp"
                        android:layout_marginLeft="@dimen/live_padding_8dp"
                        android:textSize="@dimen/live_text_13sp"
                        android:maxEms="10"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/live_attention_dialog_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:background="@drawable/live_attention_dialog_attention_bg"
                        android:drawableLeft="@drawable/followsb_ic_unsel"
                        android:gravity="center"
                        android:layout_gravity="right|center"
                        android:drawablePadding="@dimen/live_padding_5dp"
                        android:textSize="@dimen/live_text_16sp"
                        android:paddingLeft="@dimen/live_padding_20dp"
                        android:paddingRight="@dimen/live_padding_20dp"
                        android:layout_marginRight="@dimen/live_padding_20dp"
                        android:textColor="@color/color_190f00"
                        android:text="关注"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/live_attention_dialog_cance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/live_padding_10dp"
                    android:background="@android:color/white"
                    android:src="@drawable/cancel_dark"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>






</RelativeLayout>