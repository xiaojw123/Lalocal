<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="44dp"
    android:layout_gravity="center"
    android:background="@android:color/white">
        <ImageView
            android:id="@+id/product_btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="16dp"
            android:src="@drawable/index_article_btn_like"/>

        <ImageView
            android:id="@+id/product_btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="8dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/index_article_btn_share"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/product_details_reserve"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/color_b3"
            android:gravity="center"
            android:text="预定"/>

    </LinearLayout>
</LinearLayout>