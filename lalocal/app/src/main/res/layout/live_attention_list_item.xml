<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:layout_height="100dp"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/attention_list_item_head"
            android:layout_width="@dimen/live_height_90dp"
            android:layout_height="@dimen/live_height_90dp"
            android:padding="@dimen/live_padding_10dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/live_height_60dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/live_padding_10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/attention_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:ellipsize="end"
                    android:text="lalocal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:paddingRight="@dimen/live_padding_10dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/attention_list_item_singture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="这家伙很懒啥也没写"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/attention_list_item_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffaa2a"
            android:layout_gravity="right"
            android:paddingTop="@dimen/live_padding_20dp"
            android:paddingRight="@dimen/live_padding_10dp"
            android:text="关注"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ml_gray"
        android:layout_gravity="bottom"
        ></View>
</LinearLayout>