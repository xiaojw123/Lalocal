<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#abcede"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="101dp"
        android:background="@drawable/ic_login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_size_29_dp"
        android:layout_marginTop="@dimen/dimen_size_15_dp"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/color_f1"
        android:textScaleX="1.25"
        android:textSize="@dimen/text_size_24_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_6_dp"
        android:text="@string/give_you_one_diferent_world"
        android:textColor="@color/white"
        android:textScaleX="1.1"
        android:textSize="@dimen/text_size_12_sp" />

    <LinearLayout
        android:layout_width="@dimen/login_phone_edit_width"
        android:layout_height="@dimen/login_phone_edit_height"
        android:layout_marginTop="@dimen/login_phone_edit_top"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/showmorecountry"
            android:paddingRight="@dimen/dimen_size_10_dp"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/text_size_15_sp"
            />
        <View
            style="@style/CommonD9VertialLineTheme"
            android:layout_marginTop="@dimen/dimen_size_15_dp"
            android:layout_marginBottom="@dimen/dimen_size_15_dp"
            android:background="@color/color_20_dark" />


        <EditText
            android:layout_width="254.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_size_10_dp"
            android:maxLines="1"
            android:paddingRight="@dimen/dimen_size_2_dp"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/text_size_15_sp"
            android:background="@color/transparent"
            android:text="kfkasjfajlfaj"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/login_phone_edit_width"
        android:layout_height="@dimen/login_phone_edit_height"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <com.lalocal.lalocal.view.ShapeEditText
            android:id="@+id/login_password_sedit"
            android:layout_width="@dimen/login_password_sedit_width"
            android:layout_height="match_parent"
            app:solid_color="@color/color_fff93f"
            app:stroke_color="@color/color_ffaa2a"
            app:stroke_width="@dimen/dimen_size_1_dp"
            android:paddingTop="@dimen/dimen_size_20_dp"
            android:text="adddd"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dynamic_password"
                android:textColor="@color/color_ffaa2a"
                android:textSize="@dimen/text_size_10_sp"
                android:layout_marginTop="@dimen/dimen_size_10_dp"
                />
        </FrameLayout>


    </LinearLayout>




</LinearLayout>