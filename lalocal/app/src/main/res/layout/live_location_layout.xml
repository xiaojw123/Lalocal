<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/live_location_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_height_50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/live_location_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/live_padding_15dp"
                android:src="@drawable/back"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="直播位置"
                android:gravity="center"
                android:textSize="@dimen/text_size_17_sp"/>
            <TextView
                android:id="@+id/live_location_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/live_padding_15dp"
                android:textSize="@dimen/live_text_16sp"
                android:text="完成"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_height_60dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/live_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/live_padding_15dp"
                android:textColor="#ffaa2a"
                android:text="正在定位..."
                android:textSize="@dimen/live_text_16sp"/>
            <ImageView
                android:id="@+id/live_again_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/findmyposition"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/live_padding_15dp"
                />
        </RelativeLayout>
    </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
          <android.support.v7.widget.RecyclerView
              android:id="@+id/location_recycler"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             >
          </android.support.v7.widget.RecyclerView>

  </LinearLayout>


    <ScrollView
        android:id="@+id/live_location_input_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_50dp"
        android:visibility="gone"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/live_location_input_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请输入地址"
                android:textSize="@dimen/live_text_16sp"
                android:layerType="software"
                android:windowSoftInputMode="stateVisible"
                android:background="@null"
                android:paddingLeft="@dimen/live_padding_15dp"
                />
            <TextView
                android:id="@+id/live_input_location_tv"
                android:layout_width="@dimen/live_height_60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/live_start_tv"
                android:textSize="@dimen/live_text_16sp"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/live_location_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_60dp"
        android:textSize="@dimen/live_text_16sp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/live_padding_15dp"
        android:layout_alignParentBottom="true"
        android:text="定位不准? 手动输入"/>



</LinearLayout>