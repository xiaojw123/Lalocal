<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_160dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="@dimen/dimen_size_15_dp">

        <ImageView
            android:id="@+id/img_live_playback"
            android:layout_width="@dimen/homepage_playback_img_dimen"
            android:layout_height="@dimen/homepage_playback_img_dimen"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dimen_size_20_dp"
            android:layout_marginBottom="@dimen/dimen_size_20_dp"
            android:src="@drawable/androidloading" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_1a"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_size_15_dp"
                android:alpha="0.2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/divider"
                android:layout_marginTop="@dimen/dimen_size_20_dp"
                android:layout_marginBottom="@dimen/dimen_size_20_dp"
                android:layout_marginLeft="@dimen/dimen_size_15_dp">

                <TextView
                    android:id="@+id/tv_live_playback_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="加载中..."
                    android:textColor="@color/color_1a"
                    android:textSize="@dimen/text_size_16_sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_playback_location"
                            android:layout_width="@dimen/dimen_size_12_dp"
                            android:layout_height="@dimen/dimen_size_12_dp"
                            android:layout_gravity="center_vertical"
                            android:alpha="0.2"
                            android:src="@drawable/peopleliving_location_darkic" />

                        <TextView
                            android:id="@+id/tv_live_playback_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_size_4_dp"
                            android:singleLine="true"
                            android:text="加载中..."
                            android:textColor="@color/color_b3"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_size_4_dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_playback_people"
                            android:layout_width="@dimen/dimen_size_12_dp"
                            android:layout_height="@dimen/dimen_size_12_dp"
                            android:alpha="0.2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/manypeople_dark" />

                        <TextView
                            android:id="@+id/tv_live_playback_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_size_4_dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/color_b3"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_size_4_dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_playback_time"
                            android:layout_width="@dimen/dimen_size_12_dp"
                            android:layout_height="@dimen/dimen_size_12_dp"
                            android:alpha="0.2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/manytime_light" />

                        <TextView
                            android:id="@+id/tv_live_playback_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_size_4_dp"
                            android:singleLine="true"
                            android:textColor="@color/color_b3"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>