<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fa"
    tools:context="com.lalocal.lalocal.activity.MyLiveActivity">

    <com.lalocal.lalocal.view.CustomTitleView
        android:id="@+id/my_live_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title_name="@string/my_live" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_live_items_xrlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_live_ctv"
        />

    <TextView
        android:id="@+id/my_live_items_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16_sp"
        android:textColor="@color/color_b3"
        android:text="@string/go_to_start_live_travel"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />


</RelativeLayout>
