<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fa"
    tools:context="com.lalocal.lalocal.activity.MyLiveActivity">
    <com.lalocal.lalocal.view.CustomTitleView
        android:id="@+id/my_live_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="@string/my_live"
        android:background="@color/white"
        />
   <com.jcodecraeer.xrecyclerview.XRecyclerView
       android:id="@+id/my_live_items_xrlv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@+id/my_live_toalnum_tv"
       android:layout_below="@+id/my_live_ctv"
       />
    <TextView
        android:id="@+id/my_live_toalnum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_b3"
        android:textSize="@dimen/text_size_14_sp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dimen_size_10_dp"
        android:layout_marginTop="@dimen/dimen_size_10_dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
