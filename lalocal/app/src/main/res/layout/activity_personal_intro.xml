<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8"
    android:orientation="vertical"
    tools:context="com.lalocal.lalocal.activity.PersonalIntroActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <com.lalocal.lalocal.view.CustomTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_name="@string/person_description" />

        <TextView
            android:id="@+id/personal_intro_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dimen_size_15_dp"
            android:text="@string/save"
            android:textColor="@color/color_66"
            android:textSize="@dimen/text_size_15_sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <EditText
            android:id="@+id/personal_intro_edit"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_16_sp"
            android:textColor="@color/color_1a"
            android:maxLength="50"
            android:gravity="top"
            android:textCursorDrawable="@drawable/cursor_color_orange"
            android:paddingTop="@dimen/text_size_15_sp"
            android:textColorHint="@color/color_d9"
            android:hint=" 填写个人介绍"
            android:paddingLeft="@dimen/dimen_size_15_dp"
            android:layout_height="@dimen/personal_intro_edit_height"
            android:background="@color/white" />

        <TextView
            android:id="@+id/personal_intro_inputlimt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/50"
            android:textColor="@color/color_b3"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/dimen_size_5_dp"
            android:layout_marginBottom="@dimen/dimen_size_5_dp"
            />
    </FrameLayout>
    <View
        style="@style/CommonD9LineTheme"
/>
</LinearLayout>
