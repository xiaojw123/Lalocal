<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginRight="@dimen/live_padding_2dp"
                android:layout_marginLeft="@dimen/live_padding_2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/live_height_110dp"
                        >
                        <ImageView
                            android:id="@+id/liveing_dialog_bgiv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/liver_share_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好风景,\n要与世界分享!"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/live_padding_20dp"
                            android:textColor="#8c8c8c"
                            android:textSize="@dimen/text_size_20_sp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/live_height_70dp"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/liveing_dialog_share_friends"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/live_text_10sp"
                            android:drawableTop="@drawable/share_friendscircle_yellow"
                            android:gravity="center"
                            android:text="朋友圈"/>
                        <TextView
                            android:id="@+id/liveing_dialog_share_wechat"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/live_text_10sp"
                            android:drawableTop="@drawable/share_wechat_yellow"
                            android:gravity="center"
                            android:text="微信好友"/>
                        <TextView
                            android:id="@+id/liveing_dialog_share_weibo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/live_text_10sp"
                            android:drawableTop="@drawable/share_weibo_yellow"
                            android:gravity="center"
                            android:text="新浪微博"/>
                        <TextView
                            android:id="@+id/liveing_dialog_share_qq"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/live_text_10sp"
                            android:drawableTop="@drawable/share_qq_yellow"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="QQ好友"/>
                        <TextView
                            android:id="@+id/liveing_dialog_share_qzone"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/live_text_10sp"
                            android:drawableTop="@drawable/share_qzone_yellow"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="QQ空间"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/liveing_dialog_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="@dimen/live_padding_10dp"
                        android:src="@drawable/cancel_dark"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>








</RelativeLayout>