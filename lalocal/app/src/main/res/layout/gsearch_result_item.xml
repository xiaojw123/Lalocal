<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/gsearch_reslut_item_xrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/gsearch_reslut_item_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_40_dp"
        android:layout_marginRight="@dimen/dimen_size_40_dp"
        android:layout_marginTop="@dimen/gsearch_result_empty_top"
        android:gravity="center_horizontal"
        android:text="@string/g_search_result_empt"
        android:textColor="@color/color_50191000"
        android:visibility="invisible"
        />

</FrameLayout>