<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_size_15_dp"
    android:paddingRight="@dimen/dimen_size_15_dp"
    android:paddingTop="@dimen/dimen_size_15_dp"
    android:paddingBottom="@dimen/dimen_size_5_dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardCornerRadius="@dimen/dimen_size_6_dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/live_height_50dp">
                <ImageView
                    android:id="@+id/icon_my_concern"
                    android:layout_width="@dimen/dimen_size_12_dp"
                    android:layout_height="@dimen/dimen_size_12_dp"
                    android:layout_marginLeft="@dimen/dimen_size_10_dp"
                    android:src="@drawable/title_ic"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon_my_concern"
                    android:text="我的关注"
                    android:layout_marginLeft="@dimen/dimen_size_10_dp"
                    android:textSize="@dimen/text_size_16_sp"
                    android:textColor="@color/color_191000"/>

                <LinearLayout
                    android:id="@+id/layout_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textColor="@color/color_191000"
                        android:textSize="12sp"
                        android:alpha="0.5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_size_4_dp"/>

                    <ImageView
                        android:id="@+id/icon_nextpage"
                        android:layout_width="@dimen/dimen_size_6_dp"
                        android:layout_height="@dimen/dimen_size_12_dp"
                        android:src="@drawable/arrow_nextpage_right_ic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_size_15_dp"/>
                </LinearLayout>

            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.1"
                android:background="@color/color_191000"
                android:layout_marginLeft="32dp"/>

            <LinearLayout
                android:id="@+id/layout_click"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_15_dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dimen_size_12_dp"
                        android:layout_height="@dimen/dimen_size_12_dp"
                        android:layout_marginLeft="@dimen/dimen_size_10_dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/homelist_living_ic"/>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加载中..."
                        android:layout_marginLeft="@dimen/dimen_size_10_dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/color_191000"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10_dp"
                    android:paddingLeft="32dp">

                    <ImageView
                        android:id="@+id/icon_my_concern_address"
                        android:layout_width="@dimen/dimen_size_12_dp"
                        android:layout_height="@dimen/dimen_size_12_dp"
                        android:layout_centerVertical="true"
                        android:alpha="0.6"
                        android:src="@drawable/peopleliving_location_darkic_02"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点加载中..."
                        android:layout_toRightOf="@id/icon_my_concern_address"
                        android:layout_marginLeft="@dimen/dimen_size_4_dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_12_sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="加载中..."
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:textColor="@color/color_191000"
                            android:layout_marginRight="@dimen/dimen_size_6_dp"/>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="@dimen/dimen_size_16_dp"
                            android:layout_height="@dimen/dimen_size_16_dp"
                            android:src="@drawable/androidloading"
                            app:riv_corner_radius="99dp"
                            android:layout_marginRight="@dimen/dimen_size_15_dp"/>
                    </LinearLayout>
                </RelativeLayout>
                
                <com.lalocal.lalocal.view.ScaleImageView
                    android:id="@+id/img_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_15_dp"
                    android:src="@drawable/androidloading"
                    app:scale="2.3"
                    app:solid="solid_width"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_last_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="@dimen/dimen_size_12_dp"
                    android:layout_marginBottom="@dimen/dimen_size_12_dp"
                    android:textColor="@color/color_191000"
                    android:alpha="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>