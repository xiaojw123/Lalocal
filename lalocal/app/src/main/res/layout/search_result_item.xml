<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/search_result_item_img"
        android:layout_width="@dimen/search_result_item_img_width"
        android:layout_height="@dimen/search_result_item_img_height"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/search_result_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_66"
        android:textSize="@dimen/text_size_15_sp"
        android:layout_toRightOf="@+id/search_result_item_img"
        android:layout_marginLeft="@dimen/dimen_size_10_dp"
        />


</RelativeLayout>