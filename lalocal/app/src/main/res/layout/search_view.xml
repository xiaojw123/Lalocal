<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/des_search_view_height"
    android:layout_marginLeft="@dimen/des_search_view_left"
    android:layout_marginRight="@dimen/des_search_view_left"
    android:layout_marginTop="@dimen/des_search_view_top"
    android:layout_marginBottom="@dimen/des_search_view_top"
    android:background="@drawable/search_view_bg"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/search"
    android:textColor="@color/color_b3"
    android:textSize="@dimen/text_size_14_sp"
    android:drawableStart="@drawable/destination_icon_search"
    android:layout_gravity="center"
    android:drawablePadding="@dimen/dimen_size_8_dp"
    />


</FrameLayout>
