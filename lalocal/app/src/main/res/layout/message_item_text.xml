<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/message_item_text_wang"
    android:clickable="true"
    android:paddingTop="@dimen/live_padding_3dp"
   >

    <LinearLayout
        android:id="@+id/message_item_text_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/live_padding_10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/message_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:singleLine="false"
            android:layout_marginLeft="3dp"
            android:lineSpacingExtra="@dimen/dimen_size_3_dp"
            android:layout_gravity="center_vertical"

            />

        <ImageView
            android:id="@+id/nim_message_item_iv"
            android:layout_width="@dimen/dimen_size_25_dp"
            android:layout_height="@dimen/dimen_size_25_dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/androidloading"
            />
        <TextView
            android:id="@+id/nim_message_item_text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="false"
            android:maxWidth="@dimen/max_text_bubble_width"
            android:textColor="@color/color_chat_content"
            android:textSize="14sp"
            />



    </LinearLayout>


</LinearLayout>