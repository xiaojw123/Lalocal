<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_70"
   >

    <Button
        android:id="@+id/sifit_menu_close_btn"
        android:layout_width="@dimen/sift_close_btn_width"
        android:layout_height="@dimen/sift_close_btn_width"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/sift_close_btn_right"
        android:layout_marginTop="@dimen/sift_close_btn_top"
        android:background="@drawable/sift_btnbg_close" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sift_menu_rlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sift_menu_rlv_top"
        />


</FrameLayout>