<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lalocal.lalocal.view.CustomTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="@string/currency_instruction" />

    <TextView
        android:id="@+id/score_instructions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_20_dp"
        android:background="@color/color_ee"
        android:padding="@dimen/dimen_size_2_dp"
        android:text="@string/score_instructions"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22_sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginRight="@dimen/dimen_size_20_dp"
        android:id="@+id/score_instructions_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />
    <TextView
        android:id="@+id/gold_instructions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_20_dp"
        android:background="@color/color_ee"
        android:padding="@dimen/dimen_size_2_dp"
        android:text="@string/gold_instructions"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22_sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginRight="@dimen/dimen_size_20_dp"
        android:id="@+id/gold_instructions_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />


</LinearLayout>