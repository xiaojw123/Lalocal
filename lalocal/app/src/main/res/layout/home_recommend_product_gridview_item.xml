<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lalocal.lalocal.view.SquareImageView
            android:id="@+id/img_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/androidloading" />

        <TextView
            android:id="@+id/tv_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_commodity"
            android:layout_marginBottom="@dimen/home_recommend_commodity_gridview_item_price_margin_bottom"
            android:background="@color/color_ffaa2a"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="￥250元起"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14_sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commodity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="正在加载中..."
        android:textColor="@color/color_1a"
        android:textSize="@dimen/text_size_14_sp" />

</LinearLayout>