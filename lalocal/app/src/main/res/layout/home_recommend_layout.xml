<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:hardwareAccelerated="false"
    android:layout_height="match_parent">
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_statusbar_height"></View>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_title_ll_height"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/recommend_title_img_wdith"
                    android:layout_height="@dimen/recommend_title_img_height"
                    android:layout_gravity="center"
                    android:src="@drawable/lalocallogo"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.lalocal.lalocal.view.xlistview.XListView
                    android:id="@+id/recommend_xlv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:dividerHeight="0dip"
                    ></com.lalocal.lalocal.view.xlistview.XListView>
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>