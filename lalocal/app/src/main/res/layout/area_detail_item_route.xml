<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/des_area_detail_item_height"
    android:layout_marginBottom="@dimen/dimen_size_10_dp"
    >
    <ImageView
        android:id="@+id/area_detail_item_route_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/area_detail_item_route_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/area_detail_item_title_height"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_size_15_dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingStart="@dimen/dimen_size_10_dp"
        android:background="@color/black_70"
        />
</FrameLayout>
</LinearLayout>