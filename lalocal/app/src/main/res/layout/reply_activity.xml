<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fa"
   >
    <LinearLayout
        android:id="@+id/reply_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_44dp"
        android:orientation="horizontal"
        android:background="@color/color_fa"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/reply_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/live_padding_15dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/reply_title_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_17_sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发起评论"
            android:maxLength="15"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/reply_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14_sp"
            android:text="发送"
            android:textColor="@color/color_70190f00"
            android:paddingLeft="@dimen/live_padding_10dp"
            android:paddingRight="@dimen/live_padding_15dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/reply_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_150dp"
        android:background="@color/color_fa"
        android:maxLength="140"
        android:gravity="top"
        android:layout_below="@+id/reply_title"
        android:textSize="@dimen/text_size_15_sp"
        android:lineSpacingExtra="@dimen/live_padding_2dp"
        android:padding="@dimen/live_padding_15dp"
        />
        <TextView
            android:layout_below="@+id/reply_content"
            android:id="@+id/input_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_70190f00"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/live_padding_15dp"
            android:text="0/140"/>

</RelativeLayout>