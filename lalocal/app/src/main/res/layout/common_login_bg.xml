<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80_black"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginTop="101dp"
            android:background="@drawable/ic_login_logo" />

        <TextView
            android:id="@+id/common_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_29_dp"
            android:layout_marginTop="@dimen/dimen_size_15_dp"
            android:gravity="center"
            android:textColor="@color/color_f1"
            android:textScaleX="1.25"
            android:textSize="@dimen/text_size_24_sp" />

        <TextView
            android:id="@+id/common_des_tv"
            android:layout_width="201.5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_6_dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textScaleX="1.1"
            android:textSize="@dimen/text_size_12_sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/common_back_img"
        android:layout_width="19.5dp"
        android:layout_height="27dp"
        android:layout_marginLeft="@dimen/dimen_size_8_dp"
        android:layout_marginTop="@dimen/dimen_size_20_dp"
        android:scaleType="fitXY"
        android:padding="@dimen/dimen_size_5_dp"
        android:src="@drawable/ic_yellowback"
        android:visibility="gone"
        />
</FrameLayout>