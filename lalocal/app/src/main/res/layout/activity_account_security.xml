<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fa"
    android:orientation="vertical"
    tools:context="com.lalocal.lalocal.me.AccountSecurityActivity">

    <com.lalocal.lalocal.view.CustomTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="@string/account_security" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_10_dp"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_20_dp"
        android:text="@string/recommend_login_way" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/CommonD9LineTheme" />


        <FrameLayout
            android:id="@+id/account_security_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:layout_marginLeft="@dimen/dimen_size_15_dp"
            android:paddingRight="@dimen/dimen_size_15_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/SettingItemTextTheme"
                    android:text="@string/mobile" />

                <TextView
                    android:id="@+id/account_security_phone_tv"
                    style="@style/AccoutSecurityNameStyle"
                    android:layout_marginTop="@dimen/dimen_size_3_dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/account_security_unbind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:drawablePadding="@dimen/dimen_size_10_dp"
                android:drawableRight="@drawable/arrow_right"
                android:text="@string/no_bind"
                android:textColor="@color/color_ffaa2a"
                android:visibility="gone"
                />
        </FrameLayout>

        <View style="@style/CommonD9LineTheme" />


        <FrameLayout
            android:id="@+id/account_security_email_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:paddingLeft="@dimen/dimen_size_15_dp"
            android:paddingRight="@dimen/dimen_size_15_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemTextTheme"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/account_security_email_tv"
                    style="@style/AccoutSecurityNameStyle"
                    android:layout_marginTop="@dimen/dimen_size_3_dp"
                    android:visibility="gone"
                  />


            </LinearLayout>


            <TextView
                android:id="@+id/accout_security_email_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:drawablePadding="@dimen/dimen_size_10_dp"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/color_ffaa2a"
                 android:visibility="gone"
                />


        </FrameLayout>

        <View style="@style/CommonD9LineTheme" />


        <FrameLayout
            android:id="@+id/account_security_modifypsw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:visibility="gone"
            >

            <TextView
                style="@style/SettingItemTextTheme"
                android:layout_gravity="center_vertical"
                android:text="@string/modify_psw"
                android:layout_marginLeft="@dimen/dimen_size_15_dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"
                android:layout_marginRight="@dimen/dimen_size_15_dp"
                />

            <View
                style="@style/CommonD9LineTheme"
                android:layout_gravity="bottom" />

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_10_dp"
        android:layout_marginLeft="@dimen/dimen_size_15_dp"
        android:layout_marginTop="@dimen/dimen_size_20_dp"
        android:text="@string/other_login_way" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/CommonD9LineTheme" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:paddingLeft="@dimen/dimen_size_15_dp"
            android:paddingRight="@dimen/dimen_size_15_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    style="@style/SettingItemTextTheme"
                    android:layout_gravity="center_vertical"
                    android:text="@string/weixin"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/account_security_name_weixin"
                    style="@style/AccoutSecurityNameStyle"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_size_3_dp"
                    />
            </LinearLayout>


            <Switch
                android:id="@+id/accout_security_weixin_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <View style="@style/CommonD9LineTheme" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:paddingLeft="@dimen/dimen_size_15_dp"
            android:paddingRight="@dimen/dimen_size_15_dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >

            <TextView
                style="@style/SettingItemTextTheme"
                android:layout_gravity="center_vertical"
                android:text="@string/qq" />
                <TextView
                    android:id="@+id/account_security_name_qq"
                    style="@style/AccoutSecurityNameStyle"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_size_3_dp"
                    />

            </LinearLayout>

            <Switch
                android:id="@+id/accout_security_qq_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <View style="@style/CommonD9LineTheme" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50_dp"
            android:paddingLeft="@dimen/dimen_size_15_dp"
            android:paddingRight="@dimen/dimen_size_15_dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >

            <TextView
                style="@style/SettingItemTextTheme"
                android:layout_gravity="center_vertical"
                android:text="@string/weibo" />
            <TextView
                android:id="@+id/account_security_name_weibo"
                style="@style/AccoutSecurityNameStyle"
                android:layout_marginTop="@dimen/dimen_size_3_dp"
                android:visibility="gone"
                />
            </LinearLayout>

            <Switch
                android:id="@+id/accout_security_weibo_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <View style="@style/CommonD9LineTheme" />

    </LinearLayout>


</LinearLayout>
