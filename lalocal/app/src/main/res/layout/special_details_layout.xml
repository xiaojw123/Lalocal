<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mian"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/special_main_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/reLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_title_ll_height">
                <include layout="@layout/common_back_layout" />
                <ImageView
                    android:layout_width="@dimen/recommend_title_img_wdith"
                    android:layout_height="@dimen/recommend_title_img_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/lalocallogo"
                    />
                <ImageView
                    android:id="@+id/special_details_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/special_details_margin"
                    android:src="@drawable/index_article_btn_share"/>
                <!--  <ImageView
                      android:id="@+id/special_details_like_iv"
                      android:layout_width="@dimen/special_details_img_like"
                      android:layout_height="@dimen/special_details_img_like"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/special_details_share_iv"
                      android:layout_marginRight="@dimen/special_details_margin"
                      android:scaleType="fitXY"
                      android:src="@drawable/index_article_btn_like"/>-->

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_width="@dimen/special_details_img_like"
                    android:layout_height="@dimen/special_details_img_like"
                    android:layout_toLeftOf="@+id/special_details_share_iv"
                    android:layout_marginRight="@dimen/special_details_margin"
                    android:layout_centerInParent="true"
                    android:id="@+id/special_details_like_iv"
                    app:btn_color="@android:color/darker_gray"
                    app:btn_fill_color="#ff6f6f"
                    app:siShape="@raw/heart"/>
            </RelativeLayout>
            <View
                android:id="@+id/special_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ml_gray"></View>
            <LinearLayout
                android:id="@+id/height_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

            </LinearLayout>

            <com.lalocal.lalocal.view.MyScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:id="@+id/special_scrollview">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/special_title_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/special_detail_header"
                        >
                        <LinearLayout
                            android:id="@+id/special_details_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/special_details_loading"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/androidloading"
                                />
                        </LinearLayout>
                        <include layout="@layout/video_layout"></include>
                        <include layout="@layout/photo_to_text"></include>
                    </RelativeLayout>
                    <WebView
                        android:id="@+id/special_details_webview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        ></WebView>
                </LinearLayout>
            </com.lalocal.lalocal.view.MyScrollView>

        </LinearLayout>

        <include layout="@layout/page_loading"></include>
    </RelativeLayout>

</LinearLayout>