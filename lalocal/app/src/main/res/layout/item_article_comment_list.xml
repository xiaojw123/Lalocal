<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_15_dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/dimen_size_35_dp"
        android:layout_height="@dimen/dimen_size_35_dp"
        app:riv_corner_radius="99dp"
        android:scaleType="centerCrop"
        android:src="@drawable/androidloading"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textSize="@dimen/text_size_12_sp"
                    android:gravity="center_vertical"/>
                
                <ImageView
                    android:layout_width="@dimen/dimen_size_20_dp"
                    android:layout_height="@dimen/dimen_size_20_dp"
                    android:src="@drawable/icon_like_unsel"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_0065b2"
                android:text="加载中..."
                android:textSize="@dimen/text_size_15_sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="00-00 00:00"
            android:textSize="@dimen/text_size_12_sp"
            android:textColor="@color/color_191000"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_15_dp"
            android:textColor="@color/color_191000"
            android:text="评论加载中"
            android:textSize="@dimen/text_size_14_sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f8"
            android:padding="@dimen/dimen_size_10_dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>