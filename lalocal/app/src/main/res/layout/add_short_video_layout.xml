<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height_85dp"
        android:layout_marginLeft="@dimen/live_padding_30dp"
        android:padding="@dimen/live_padding_15dp"
        app:cardCornerRadius="@dimen/live_padding_6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/live_padding_5dp"
        android:layout_marginTop="@dimen/live_padding_5dp"
        android:layout_marginRight="@dimen/live_padding_15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/camera_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/cameraadd"
                android:paddingLeft="@dimen/live_padding_15dp"
                android:layout_marginRight="@dimen/live_padding_15dp"/>

            <TextView
                android:id="@+id/camera_add_short_video_tv"
                android:layout_toRightOf="@id/camera_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/live_height_40dp"
                android:textSize="@dimen/text_size_17_sp"
                android:textColor="@color/color_190f00"
                android:gravity="bottom"
                android:text="@string/camera_add_short_video"
                />
            <TextView
                android:layout_below="@id/camera_add_short_video_tv"
                android:layout_toRightOf="@id/camera_add_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/live_height_40dp"
                android:textSize="@dimen/text_size_12_sp"
                android:textColor="@color/color_70190f00"
                android:text="@string/add_short_video_hint"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/live_padding_15dp"
                android:src="@drawable/arrow_nextpage_right_ic"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>