<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="line">
            <stroke android:width="5.0dip" android:color="@color/progress_bg" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="line">
                <stroke android:width="5.0dip" android:color="#45ffaa2a" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="line">

                <stroke   android:width="5dp" android:color="#FFAA2A" />
                <gradient
                    android:startColor="#FFAA2A"
                    android:endColor="#F8E71C"
                    android:type="linear"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
</layer-list>